extends ../Layouts/default-layout

block title
  title Giỏ Hàng

block content
  .cart
    +cart-link
    .cart__title
      .wrapper
        +title-product('GIỎ HÀNG', true)
    .cart__list
      .wrapper
        table
          tr
            each item in cartMenu
              th= item
          each item in cartList
            tr.cart__list__item
              td
                img(src=item.img)
              td= item.name
              td
                p= item.price
                  sup đ
              td= item.quantity
              td
                p= item.sum
                  sup đ
              td
                i(class=item.delete)
    .cart__sum
      .wrapper
        .cart__sum__container
          p.cart__sum__title TỔNG TIỀN
    .cart__btn
      .wrapper
        .cart__btn__container
          +button-small('TIẾP TỤC MUA HÀNG','continueBuy')
          +button-small('XÓA','removeAll')
          +button-small('THANH TOÁN','payment')